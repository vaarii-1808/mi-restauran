<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI RESTAURAN - Toma de Pedidos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_pastel_choclo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/pastel_choclo"  android:contentDescription="Pastel de Choclo"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_nombre_pastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pastel de Choclo ($12.000)"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img_pastel_choclo"
        app:layout_constraintStart_toEndOf="@id/img_pastel_choclo" />

    <EditText
        android:id="@+id/et_cantidad_pastel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Cant."
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintTop_toBottomOf="@id/tv_nombre_pastel"
        app:layout_constraintStart_toStartOf="@id/tv_nombre_pastel" />

    <TextView
        android:id="@+id/tv_subtotal_pastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$ 0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_nombre_pastel"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/img_cazuela"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/cazuela"  android:contentDescription="Cazuela"
        app:layout_constraintTop_toBottomOf="@id/img_pastel_choclo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_nombre_cazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cazuela ($10.000)"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/img_cazuela"
        app:layout_constraintStart_toEndOf="@id/img_cazuela" />

    <EditText
        android:id="@+id/et_cantidad_cazuela"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Cant."
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintTop_toBottomOf="@id/tv_nombre_cazuela"
        app:layout_constraintStart_toStartOf="@id/tv_nombre_cazuela" />

    <TextView
        android:id="@+id/tv_subtotal_cazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$ 0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_nombre_cazuela"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tv_label_total_sin_propina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Total Sin Propina:"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/img_cazuela"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_total_sin_propina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_label_total_sin_propina"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/sw_propina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aplicar 10% de Propina"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_total_sin_propina"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_label_total_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TOTAL A PAGAR:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/sw_propina"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_total_a_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="@id/tv_label_total_pagar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>